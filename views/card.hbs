<h1>CARD</h1>

<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Имя</th>
                <th>Количество </th>
                <th>Действие</th>
            </tr>
            </thead>
            <tbody>

            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">DELETE</button>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
        <p><strong>Price: <span class="price">{{price}}</span> </strong></p>

        <form action="/orders" method="post">
            <button type="submit" class="btn" >Add ORDER</button>
        </form>

    {{else}}
        <p>CARD is empty</p>
    {{/if}}
</div>